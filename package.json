{
  "name": "matxambrats",
  "version": "0.5.0",
  "description": "Matxambrats - A Tetris game",
  "main": "index.html",
  "scripts": {
    "build": "npm run copy",
    "copy": "mkdir -p www && cp index.html script.js styles.css tetris.mp3 tetris.mid www/",
    "cap:init": "cap init",
    "cap:add:android": "cap add android",
    "cap:add:ios": "cap add ios",
    "cap:sync": "cap sync",
    "cap:open:android": "cap open android",
    "cap:open:ios": "cap open ios",
    "android:build": "npm run build && npm run cap:sync && cd android && ./gradlew assembleDebug",
    "android:build:release": "npm run build && npm run cap:sync && cd android && ./gradlew assembleRelease",
    "ios:build": "npm run build && npm run cap:sync",
    "firebase:deploy": "firebase deploy",
    "firebase:deploy:database": "firebase deploy --only database",
    "firebase:login": "firebase login"
  },
  "keywords": [
    "tetris",
    "game",
    "blocks",
    "capacitor",
    "android",
    "ios"
  ],
  "author": "Dejoco Arts",
  "license": "ISC",
  "devDependencies": {
    "@capacitor/cli": "^5.5.1",
    "firebase-tools": "^13.0.0"
  },
  "dependencies": {
    "@capacitor/android": "^5.5.1",
    "@capacitor/core": "^5.5.1",
    "@capacitor/ios": "^5.5.1"
  }
}
